@model ShopCartViewModel
<div class="container">
    @foreach (var el in Model.shopCart.ListShopItems)
        {
    <div class="alert alert-warning mt-3">
        <b>Фильм:</b> @el.Film.Name<br />
        <b>Цена:</b> @el.Film.Price.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))
    </div> 
        }
    <hr/>
    <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">Оплатить</a>
</div>